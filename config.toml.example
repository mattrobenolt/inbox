# inbox configuration example
# Copy this to ${XDG_CONFIG_HOME:-~/.config}/inbox/config.toml and customize

[ui]
# Number of snippet lines in the inbox list (default: 2)
list_snippet_lines = 2
# Auto refresh interval in seconds (default: 300, set to -1 to disable)
refresh_interval_seconds = 300

[[accounts]]
name = "Personal"
email = "your.email@gmail.com"
# Optional badge colors for list view account tag
# badge_fg = "foreground"
# badge_bg = "blue"

[[accounts]]
name = "Work"
email = "work.email@gmail.com"
# badge_fg = "background"
# badge_bg = "cyan"

# Add more accounts as needed
# [[accounts]]
# name = "Another Account"
# email = "another@gmail.com"

